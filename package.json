{
  "name": "EeeZorBot",
  "version": "0.1.0",
  "author": {
    "name": "Nathaniel van Diepen",
    "email": "eeems@omnimaga.org",
    "url": "http://eeems.ca"
  },
  "description": "Highly extensible Node.js bot",
  "main": "./lib/main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/Eeems/EeeZorBot.git"
  },
  "engines": {
    "node": ">=10 <12"
  },
  "dependencies": {
    "chardet": "^0.7.0",
    "deasync": "^0.1.14",
    "iconv": "^2.3.4",
    "msgpack-lite": "^0.1.26",
    "mysql": "^2.17.1",
    "node-memwatch": "^1.0.1",
    "node-persist": "^3.0.4",
    "sanic.js": "1.1.0",
    "sanitize-filename": "^1.6.1",
    "vm2": "^3.8.0",
    "ws": "^6.2.1"
  },
  "devDependencies": {
    "bundlesize": "^0.17.1",
    "codacy-coverage": "^3.4.0",
    "conventional-changelog-cli": "^2.0.12",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^1.3.1",
    "nyc": "^14.0.0",
    "pkg-ok": "^2.3.1",
    "semantic-release": "^15.13.3",
    "semantic-release-cli": "^4.1.2",
    "snazzy": "^8.0.0",
    "snyk": "^1.153.0",
    "standard": "^12.0.1",
    "standard-own": "^1.0.2",
    "tape": "^4.10.1",
    "watch": "^1.0.2",
    "wip": "^1.3.0",
    "yuidocjs": "^0.10.2"
  },
  "scripts": {
    "test": "snyk test && tape test/*.js && bundlesize",
    "start": "node lib/main.js",
    "debug": "node --inspect-brk lib/main.js",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0 && git add CHANGELOG.md",
    "watch": "watch wip --ignoreUnreadable --ignoreDotFiles",
    "cz": "wip with commitizen && wip && naenae",
    "commit-cleanup": "git branch | grep wip-archive/ | xargs -r git branch -D",
    "test-travis": "nyc yarn test && nyc report --reporter=text-lcov > lcov.info",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "lint": "standard-own --fix --verbose | snazzy",
    "prepublish": "snyk protect && pkg-ok"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "standard-own": {
    "eslintConfig": {
      "configFile": ".eslintrc.json"
    },
    "ignore": [
      "doc/*"
    ]
  },
  "snyk": true,
  "files": [
    "lib/*.js",
    "mods/*/scripts/*.js",
    "mods/*/scripts/www/*"
  ],
  "bundlesize": [
    {
      "path": "./index.js",
      "maxSize": "200 B"
    },
    {
      "path": "lib/*.js",
      "maxSize": "8 kB"
    },
    {
      "path": "mods/*/scripts/*.js",
      "maxSize": "6 kB"
    }
  ],
  "husky": {
    "hooks": {
      "pre-commit": "yarn run lint && yarn run test && yuidoc . && git add doc/ && semantic-release --prepare || true && git add package.json && yarn run changelog",
      "pre-push": "yarn run commit-cleanup"
    }
  }
}
